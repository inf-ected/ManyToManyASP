@model ManyToManyApp.Models.Student

@{
    ViewBag.Title = "Edit";
}

<h2>Create</h2>

@using (Html.BeginForm())
{


    <div class="editor-label"><b>Name</b></div>
    <div class="editor-field">
        @Html.EditorFor(m => m.Name)
    </div>

    <div class="editor-label"><b>SurName</b></div>
    <div class="editor-field">
        @Html.EditorFor(m => m.Surname)
    </div>

    <div class="editor-label"><b>Courses</b></div>
    //расставляем в цикле чекбоксы отмеченные
    //тернанрником если модель содержит хотябы один из курсов
    foreach (var c in ViewBag.Courses)
    {

        <input type="checkbox" name="selectedCourses" value="@c.Id"/>
        @c.Name
        <br />
    }
    <input type="submit" value="SEND" />
}